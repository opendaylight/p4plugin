            <artifactId>odl-tsdr-hsqldb</artifactId>
            <version>1.6.1-SNAPSHOT</version>
            <type>xml</type>
            <classifier>features</classifier>
        </dependency>

        <dependency>
            <groupId>org.opendaylight.p4plugin</groupId>
            <artifactId>p4plugin-p4runtime-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.opendaylight.p4plugin</groupId>
            <artifactId>p4plugin-p4runtime-impl</artifactId>
            <version>${project.version}</version>
        </dependency>
